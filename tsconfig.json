{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"allowJs": true,
		"noErrorTruncation": true,
		"strict": true
	},
	"include": ["**/src/"],
	"exclude": ["node_modules", "**/dist/**", "**/submodules/**"]
}
